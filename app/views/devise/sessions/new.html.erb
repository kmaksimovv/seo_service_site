<div class = "container">
  <div class="row" >
    <div class = "col-md-4 offset-md-4">
      <h2 class = "text-center" >Войти</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control text-center", placeholder: "почта" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control text-center", placeholder: "пароль" %>
        </div>
        <div class="form-group">
        <%= f.button "войти", class: "btn btn-success  btn-block ", 
                              data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Входим..."} %>
        </div>
      <% end %>
    </div> 
  </div>
</div>
