<div class = "container">
  <div class="row">
    <div class = "form-wrapper">
      <div class = "col-md-4 offset-md-4 col">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control text-center", placeholder: "почта" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control text-center", placeholder: "пароль" %>
          </div>
          <div class="form-group">
          <%= f.button t(".sign_in"), class: "btn btn-success  btn-block ", 
                                      data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Signing in..."} %>
          </div>
        <% end %>
      </div> 
    </div> 
  </div>
</div>

